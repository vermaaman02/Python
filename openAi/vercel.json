{
  "version": 2,
  "name": "tara-ai-assistant",
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "AI_NAME": "Tara",
    "AI_GENDER": "Female",
    "DEVELOPER_NAME": "Aman Verma",
    "FLASK_ENV": "production"
  },
  "functions": {
    "app.py": {
      "maxDuration": 30
    }
  }
}
